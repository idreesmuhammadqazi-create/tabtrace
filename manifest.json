{
  "manifest_version": 3,
  "name": "Tab trace",
  "version": "1.0",
  "description": "Analyzes browser tab performance and behavior patterns",
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "debugger",
    "permissions",
    "system.cpu",
    "system.memory",
    "processes",
    "browsingData",
    "webRequest"
  ],
  "optional_permissions": [
    "debugger"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Tab trace"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
